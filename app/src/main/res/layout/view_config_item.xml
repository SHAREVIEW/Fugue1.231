<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parent_rl"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp">




    <ImageView
        android:id="@+id/txtIV"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/txt"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <ImageView
        android:id="@+id/hintSelectIV"
        android:background="@drawable/hint_circle"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="13dp"
        android:layout_width="10dp"
        android:layout_height="10dp" />
            <TextView
                android:id="@+id/title"
                android:paddingLeft="16dp"
                android:layout_toRightOf="@+id/txtIV"
                android:layout_toLeftOf="@+id/rl"
                android:textColor="@color/config_item_tv"
                android:text="默认配置文件"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_width="68dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/edit"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/edit"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>






</RelativeLayout>
